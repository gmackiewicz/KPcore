@model EditTopicViewModel

@{
    ViewData["Title"] = "Edytuj temat";
}
<div class="title">
    <h2>@ViewData["Title"]</h2>
    <p class="text-success">@ViewData["StatusMessage"]</p>
    <hr />
</div>

<form asp-action="Edit">
    <div class="form-horizontal custom-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.TextBoxFor(m => m.TopicId, new { type = "hidden" })
        @Html.TextBoxFor(m => m.SubjectId, new { type = "hidden" })
        @Html.TextBoxFor(m => m.TeacherId, new { type = "hidden" })
        @Html.TextBoxFor(m => m.CreationDate, new { type = "hidden" })

        <span asp-validation-for="Title" class="text-danger"></span>
        <div class="form-group">
            <label class="control-label">Nazwa tematu:</label>
            <div>
                <input asp-for="Title" class="form-control" placeholder="Nazwa tematu" />
            </div>
        </div>

        <span asp-validation-for="Description" class="text-danger"></span>
        <div class="form-group">
            <label class="control-label">Opis:</label>
            <div>
                <textarea asp-for="Description" rows="5" class="form-control"></textarea>
            </div>
        </div>

        <span asp-validation-for="MeetingsDate" class="text-danger"></span>
        <div class="form-group">
            <label class="control-label">Data spotkań:</label>
            <div>
                <input asp-for="MeetingsDate" type="datetime-local" class="form-control" />
            </div>
        </div>

        <div class="form-group ">
            <input type="submit" value="Zatwierdź" class="btn btn-success" />
            @Html.ActionLink("Wróć", "Details", new { id = Model.TopicId }, new { @class = "btn btn-grey" })
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
