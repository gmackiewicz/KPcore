@model CreateTopicViewModel

@{
    ViewData["Title"] = "Nowy temat";
}

<div class="title">
    <h2>@ViewData["Title"]</h2>
    <p class="text-success">@ViewData["StatusMessage"]</p>
    <hr />
</div>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group text-center">
            <label asp-for="Title" class="custom-lbl control-label"></label>
            <div class="col-md-12">
                <input asp-for="Title" class="form-control black-input inline text-center" placeholder="Nazwa tematu" />
            </div>
            <span asp-validation-for="Title" class="text-danger" />
        </div>
        <div class="form-group text-center">
            <label asp-for="Description" class="custom-lbl control-label"></label>
            <div class="col-md-12">
                <textarea asp-for="Description" rows="6" class="form-control black-input inline text-area-input text-center" placeholder=""></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group text-center">
            <label asp-for="SelectedSubjectId" class="custom-lbl control-label"></label>
            <div class="col-md-12">
                <select asp-for="SelectedSubjectId" asp-items="ViewBag.SubjectList" class="form-control inline black-input"></select>
                <span asp-validation-for="SelectedSubjectId" class="text-danger" />
            </div>
        </div>
        <div class="form-group text-center">
            <label asp-for="MeetingsDate" class="custom-lbl control-label"></label>
            <div class="col-md-12">
                <input asp-for="MeetingsDate" type="datetime-local" class="form-control black-input inline text-center" />
                <span asp-validation-for="MeetingsDate" class="text-danger" />
            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Zatwierdź" class="btn btn-success" />
            <a asp-action="index" class="btn btn-danger">Anuluj</a>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
