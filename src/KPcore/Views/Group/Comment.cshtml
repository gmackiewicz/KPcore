@model GroupCommentViewModel

<div class="title">
    <h2>@ViewData["Title"].</h2>
    <hr />
</div>
<form asp-action="Comment">
    <div class="container-fluid custom-form">
        <h4>Grupa: @Model.Group.Name</h4>
        <hr class="hr-narrow" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.TextBoxFor(m => m.GroupId, new { type = "hidden" })
        @Html.TextBoxFor(m => m.CommentId, new { type = "hidden" })
        @Html.TextBoxFor(m => m.CreationDate, new { type = "hidden" })

        <span asp-validation-for="Content" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="Content" class="space-before"></label>
            <div>
                <textarea asp-for="Content" rows="5" id="comment" class="form-control" placeholder="Tutaj wpisz treść komentarza"></textarea>
            </div>
        </div>

        <div class="form-group ">
            <div class="col-sm-8 col-sm-offset-2 text-right space-before">
                <input type="submit" value="Zatwierdź" class="btn btn-success" />
                @Html.ActionLink("Wróć", "Details", new { id = Model.GroupId }, new { @class = "btn btn-grey" })
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
