@model KPcore.ViewModels.GroupViewModels.NewGroupCommentViewModel

@{
    ViewData["Title"] = "Dodaj komentarz";
}
<h2>Dodaj komentarz</h2>
<div class="container-fluid">
    <form asp-action="AddComment">
        <div class="form-horizontal">
            <h4>Grupa: @Model.Group.Name</h4>
            <hr class="hr-narrow"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.TextBoxFor(m => m.GroupId, new { type = "hidden" })
            <div class="form-group ">
                <div class="col-sm-8 col-sm-offset-1">
                    <label for="comment">Treść komentarza:</label>
                    <textarea asp-for="Content" rows="3" id="comment" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger" />
                </div>
            </div>
            <div class="form-group ">
                <div class="col-sm-8 col-sm-offset-1 text-right">
                    <input type="submit" value="Dodaj" class="btn btn-success" />
                    @Html.ActionLink("Wróć", "Details", new { groupId = Model.GroupId }, new { @class = "btn btn-grey" })
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

