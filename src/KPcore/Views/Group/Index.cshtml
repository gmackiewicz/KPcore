@model StudentGroupIndexViewModel
@{
    ViewData["Title"] = "Twoje grupy";
}
<div class="title">
    <h2>@ViewData["Title"].</h2>
    <p>@ViewData["StatusMessage"]</p>
    <hr />
</div>

<div class="row group-list">
    <ul class="list-unstyled">
        @{
            foreach (var g in Model.StudentGroups)
            {
                <li>
                    <div class="col-sm-6 col-sm-offset-3">
                        @Html.ActionLink(g.Key.Group.Name, "Details", new { id = g.Key.GroupId })
                        <p>
                            Najnowszy komentarz:
                            @g.Value.Content
                        </p>
                        <hr/>
                    </div>
                </li>

            }
        }
    </ul>
    @if (!Model.StudentGroups.Any())
    {
        <h2 class="text-center">Nie dopisałeś się do żadnej grupy.</h2>
    }
    <div class="col-sm-6 col-sm-offset-3">
        @Html.ActionLink("Stwórz nową grupę", "Create", "Group", null, new { @class = "btn btn-grey" })
    </div>
</div>

