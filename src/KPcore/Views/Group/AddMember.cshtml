@model AddMemberToGroupViewModel

@{
    ViewData["Title"] = "Dodaj członka do grupy";
}
<div class="title">
    <h2>@ViewData["Title"].</h2>
    <p class="text-success">@ViewData["StatusMessage"]</p>
    <hr />
</div>
<form asp-action="AddMember">
    <div class="form-horizontal custom-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.TextBoxFor(m => m.GroupId, new { type = "hidden" })

        <span asp-validation-for="SelectedUser" class="text-danger"></span>
        <div class="form-group">
            <label asp-for="SelectedUser" class="control-label"></label>
            <div>
                <select asp-for="SelectedUser" asp-items="ViewBag.UserList" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Zatwierdź" class="btn btn-success" />
            @Html.ActionLink("Wróć", "Details", new { id = Model.GroupId }, new { @class = "btn btn-grey" })
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
