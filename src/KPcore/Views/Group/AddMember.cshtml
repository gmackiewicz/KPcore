@model AddMemberToGroupViewModel

@{
    ViewData["Title"] = "Dodaj członka do grupy";
}
<div class="title">
    <h2>@ViewData["Title"].</h2>
    <p class="text-success">@ViewData["StatusMessage"]</p>
    <hr />
</div>
<form asp-action="AddMember">
    <div class="form-horizontal text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.TextBoxFor(m => m.GroupId, new { type = "hidden" })
        <div class="form-group col-sm-12 text-center">
            <label asp-for="SelectedUser" class="custom-lbl control-label"></label>
            <div class="col-md-12 text-center">
                <select asp-for="SelectedUser" asp-items="ViewBag.UserList" class="black-input inline form-control"></select>
                <span asp-validation-for="SelectedUser" class="text-danger" />
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Zatwierdź" class="btn btn-success" />
                @Html.ActionLink("Wróć", "Details", new { id = Model.GroupId }, new { @class = "btn btn-grey" })
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
