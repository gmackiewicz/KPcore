@model KPcore.ViewModels.GroupViewModels.GroupDetailsViewModel

@{
    ViewData["Title"] = "Szczegóły";
}
<div>
    @Html.ActionLink("Edit", "EditGroup", new { id = Model.Id })
</div>

<div class="container-fluid">
    <!-- GROUP TITLE -->
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text-center group-title">
            <div class="col-sm-10 col-sm-offset-1">
                <h1>
                    @Html.DisplayFor(model => model.Name)
                </h1>
            </div>
            <div class="col-sm-1 text-right text-small">
                <dl>
                    <dd>Edytuj</dd>
                    <dd>Usun</dd>

                </dl>

            </div>
            <div class="col-sm-12">
                <hr class="molten-core-bold" />
                @{
                    if (Model.Topic != null)
                    {
                        <a href="#">
                            <h1>@Model.Topic.Title</h1>
                        </a>
                        <h2>@Model.Topic.Subject.Name</h2>
                    }
                    else
                    {
                        <a href="#">
                            <h2>
                                <i class="fa fa-plus-square-o"></i> Dodaj temat do grupy
                            </h2>
                        </a>
                    }
                    <hr />
                }
            </div>
        </div>
        <div class="col-sm-3">

        </div>
    </div>
    <!-- GROUP TITLE END -->
    <!-- CONTENT -->
    <div class=row>
        <!-- USER LIST -->
        <div class="col-sm-4">
            <div class="text-center group-list-sm">
                <h3>Users:</h3>
                <hr class="molten-core" />
                <ul class="list-unstyled">

                    <li>
                        <div class="list-item-info">
                            Lider: <a href="#">@Model.GroupLeader.FirstName @Model.GroupLeader.LastName</a>
                            <hr class="hr-narrow" />
                        </div>
                    </li>
                    @foreach (var s in Model.StudentsList)
                    {
                        <li>
                            <div class="list-item-info">
                                <a href="#">@s.FirstName @s.LastName</a>
                                <hr class="hr-narrow" />
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <!-- ADD USER BUTTON -->
            <div class="row">
                <div class="text-center">
                    <a href="#" class="btn btn-grey">[ Dodaj ]</a>
                </div>
            </div>
            <!-- ADD USER BUTTON END -->
        </div>
        <!-- USER LIST END -->
        <!-- COMMENT SECTION START -->
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-9 text-center">
                    <span class="text-center">
                        <h2 class="inblock">KOMENTARZE</h2>
                    </span>
                </div>
                <div class="col-sm-3 text-center">
                    <span class="text-center add-comment">
                        @Html.ActionLink("DODAJ KOMENTARZ", "AddComment", "Group", new { groupId = Model.Id, }, new { @class = "btn btn-grey" })
                    </span>
                </div>
            </div>
            <!-- COMMENT START -->
            @foreach (var c in Model.GroupComments)
            {
                <div class="row">
                    <div class="col-xs-12 single-comment">
                        <div class="row">
                            <div class="col-sm-10 bold inblock">
                                @c.Author.FirstName @c.Author.LastName
                            </div>
                            <div class="col-xs-2 text-right">
                                <i class="fa fa-angle-down" aria-hidden="true"></i>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-12">
                                @c.Content
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 thin font-grey">
                                <span>Data dodania:</span> <span class="bold">@c.CreationDate</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- COMMENT END -->
        </div>
        <!-- COMMENT SECIONT END -->
    </div>
</div>